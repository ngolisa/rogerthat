




<div class="total">
  <div class="en_tete">
    <h1 class="text_post-it0">MON COURS</h1>
  </div>

   <div class="corps">
    <div class="next_to">

         <%= cl_image_tag @lesson.teacher.avatar, class:"avatar" %>

       <div>
       <p class="text_post-it"> <%= @lesson.teacher.first_name %> <%= @lesson.teacher.last_name %> </p>
      </div>

    </div>

    <div class="next_to1">

        <%= image_tag "raquettes.svg", class: "test" %>

      <div class="ppostit">
        <%= @lesson.date.strftime('%A %e %B')%><br>
        <%= @lesson.date.strftime('%l:%M')%>
      </div>
    </div>
  </div>

</div>


<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @lesson.notion.name %></h1>
    </div>
  </div>
  <% if current_user == @lesson.teacher && @lesson.status == 'pending'%>

      <%= link_to "Confirm", changestatus_lesson_path(@lesson, :status => 'accepted'), method: :POST, class: "btn-confirm"%>



      <%= link_to "Refuse", changestatus_lesson_path(@lesson, :status => 'refused'), method: :POST, class: "btn-refuse" %>

  <% end %>
  <div class="row">
    <div class="col-sm-5">
      <div class="img-lesson"> <%= cl_image_tag @lesson.notion.photo %> </div>
      <% unless @lesson.comment.nil? %>
        <div class="card-comment">
          <%= cl_image_tag @lesson.teacher.avatar %>
          <div class="card-comment-infos">
            <h2>Conseil d'<%= @lesson.teacher.first_name %> :</h2>
            <p><%= @lesson.comment %></p>
          </div>
        </div>
      <% end %>
      <% if @lesson.review.nil?  && current_user == @lesson.student %>
        <h1>Laisser un avis pour <%= @lesson.teacher.first_name %> <%= @lesson.teacher.last_name %></h1>
        <%= simple_form_for [@lesson, @review] do |f| %>
          <%= f.input :rating, label: "Note" , collection: (0..5).to_a %>
          <%= f.input :comment, label: "Commentaire" %>
          <%= f.submit "Envoyer" %>
        <% end %>
      <% end %>
      <% if current_user == @lesson.teacher && @lesson.comment.nil? %>
        <h1>Laisser un commentaire pour <%= @lesson.student.first_name %> <%= @lesson.student.last_name %></h1>
        <%= simple_form_for @lesson do |f| %>
          <%= f.input :comment, label: "Commentaire" %>
          <%= f.submit "Envoyer" %>
        <% end %>
      <%end %>
    </div>
    <div class="col-sm-7">
      <video controls width="100%">
        <source src="<%= cl_video_path @lesson.notion.video %>" type="video/webm">
      </video>
      <p><%= @lesson.notion.description %></p>
    </div>
  </div>

</div>



























