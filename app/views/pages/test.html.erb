 <div class="container">
  <div class="d-flex">
  <div>

    <canvas style="display: none" width="320" height="240" id="motion-teacher">
    </canvas>


  </div>
    <video width="320" height="240" id="video-motion-teacher" autoplay loop>
    </video>

  <div class = "score" id= "score_bar"></div>
  <div>

    <canvas style="display:none" width="320" height="240" id="motion"> </canvas>

    <video style="display:none" width="320" height="240" id="video-motion" autoplay> </video>
  </div>


  <canvas width="320" style="" height="240" id="canvas1"></canvas>

  <canvas width="320" style="display:none" height="240" id="canvas2"></canvas>






  </div>
  <div class="d-flex">

    <button class ="record">Record </button>
    <button class ="stop">Stop </button>
    <button class ="play">Play </button>

  </div>

  <div>
    <label for="hue"></label>
    <input type="range" min=0 max=360 name="hue" id="hue-c" value='110'>

    <label for="tolerances"></label>
    <input type="range" min=0 max=360 name="tolerances" id="tolerences-c" value='48'>
  </div>
  <%= javascript_pack_tag 'motion_capture' %>
</div>
