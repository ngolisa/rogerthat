 <div class="container">

  <div>

    <canvas width="240" height="180" id="motion"> </canvas>

    <video width="240" height="180" id="video-motion" autoplay> </video>
  </div>

  <div>

    <canvas width="240" height="180" id="motion-teacher"> </canvas>

    <video width="240" height="180" id="video-motion-teacher" autoplay loop> </video>
  <button class ="record">Record </button>
  <button class ="stop">Stop </button>
  </div>

  <canvas width="240" height="180" id="canvas1"></canvas>

  <canvas width="240" height="180" id="canvas2"></canvas>


  <div>
    <label for="hue"></label>
    <input type="range" min=0 max=360 name="hue" id="hue-c" value='250'>

    <label for="tolerances"></label>
    <input type="range" min=0 max=360 name="tolerances" id="tolerences-c" value='75'>
  </div>

  <button class ="play">Play </button>


  <div class = "score emoji"></div>

  <%= javascript_pack_tag 'motion_capture' %>
</div>
