<div class="container">
  <div class="containerD">
  <h1>Dashboard</h1>

 <div class="box0">

    <div class="box1">
      <div class="titre1">
      <h1>All upcoming lessons</h1>
      </div>
      <% @all_upcoming_lessons.each do |lesson| %>
       <div class="little_box">
           <%= lesson.date %> <br>
           <%= lesson.teacher.full_name %> <br>
           <%= lesson.notion.name %>
        </div>
        <p class="space"> ðŸŽ¾ </p>
        <% end %>
    </div>


    <div class="box2">
      <div class="titre2">
      <h1>Next notion</h1>
      </div>
      <div class="little_box1">
        <% if @all_upcoming_lessons.empty?  %>
          <h1>pas de upcomming lesson</h1>
        <% else %>

          <div class="img_notion">
          <%= cl_image_tag @all_upcoming_lessons.first.notion.photo, width: 400, height: 300, crop: :fill %>
          </div>
          <div class="info">
           <%= @all_upcoming_lessons.first.notion.name %>
         </div>

        <% end %>
      </div>
    </div>

  </div>

    <div class="box3">
      <h1>Past notion</h1>
      <div class="little_box2">
        <ul>
          <% if @all_past_lessons.nil? %>
            <h1>pas de notions</h1>
          <% else %>
            <% @all_past_lessons.each do |lesson| %>
              <%= lesson.notion.name %>
              <%= lesson.notion.video %>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

