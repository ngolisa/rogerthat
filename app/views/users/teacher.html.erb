<div class="container">

  <div class="center-text mb-5">
    <%= cl_image_tag @teacher.avatar, class: "avatar-large" %>
    <h2 class="mb-0 pb-1"><%= @teacher.first_name %> <%= @teacher.last_name %></h2>

    <% m = 0 %>
    <% @reviews.each do |review| %>
      <% m += review.rating %>
    <% end %>
    <% if @reviews.length ==0 %>
      <% s=0 %>
    <% else %>
      <% s = m/@reviews.length %>
    <% end %>

    <% s.times do %>
      <%=image_tag 'ballverte', style: 'height:30px;width:30px;'%>
    <% end %>

    <h4> <%=s %>/5</h4>
  </div>




  <% unless @reviews.empty? %>
    <% @reviews.each do |review| %>

      <div class="mb-5">

        <div class="d-flex">
          <%= cl_image_tag review.lesson.student.avatar, class: 'avatar-comment'%>
          <div>
            <div>
              <h5>
                <%= review.lesson.student.first_name %> <%= review.lesson.student.last_name %>
              </h5>
            </div>
            <div>
              <% review.rating.times do  %>
                <%=image_tag 'ballverte', style: 'height:18px;width:18px;'%>
              <% end %>
              <h5><%= review.rating %>/5</h5>
            </div>
          </div>
        </div>
        <div>
          <p>"<%= review.comment %>"</p>
        </div>
        <div>
          <p style="color:grey"><%= review.created_at.strftime('%A %e %B') %></p>
        </div>
      </div>





    <% end %>
  <% end %>
</div>
